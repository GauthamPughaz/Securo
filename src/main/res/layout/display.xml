<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/darky"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Password"
        android:id="@+id/textView7"
        android:layout_marginLeft="30dp"
        android:textSize="24sp"
        android:textColor="#fdd14e85"
        android:layout_alignParentTop="true"
        android:layout_marginTop="149sp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold|" />

    <TextView
        android:layout_width="200dp"
        android:textColor="#fdd14e85"
        android:layout_height="wrap_content"
        android:text="View Password"
        android:textSize="24sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="53dp"
        android:textStyle="bold|" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Password"
        android:id="@+id/textView9"
        android:textSize="24sp"
        android:textColor="#fdd14e85"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="53dp"
        android:textColorHighlight="#d96e6e"
        android:textStyle="bold|" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:text="Powered by\n    Securo"
        android:id="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />



    <ImageButton
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:id="@+id/imageButton3"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/rbutton"
        android:src="@drawable/arrow"

        android:layout_above="@+id/textView9"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:id="@+id/imageButton2"

        android:layout_marginRight="25dp"

        android:background="@drawable/rbutton"
        android:src="@drawable/arrow"

        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/imageButton3" />
    <ImageButton
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:id="@+id/imageButton4"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/rbutton"
        android:src="@drawable/arrow"

        android:layout_alignBottom="@+id/textView9"
        android:layout_alignEnd="@+id/textView7"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:textSize="36sp"
        android:textColor="#fdd14e85"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What's next?"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textStyle="bold" />


</RelativeLayout>